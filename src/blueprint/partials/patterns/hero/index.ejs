<% 
    var heading = heading || "";
    var lead = lead || "";

    if(lead !== "") {
        lead = `<p class="lead mb-4">${lead}</p>`;
    }

    var class_names = class_names || "";

    var content = [
        lead,
        content || "",
    ].join("");

    // outermost wrapper used to have pt-4 my-5 on it.
%>
<div class="px-3 <%= class_names %>">
    <div class="col-lg-6 mx-auto">
        <h1 class="display-5 fw-bold text-body-emphasis mb-3"><%- heading %></h1>
        <%- content %>
    </div>
</div>