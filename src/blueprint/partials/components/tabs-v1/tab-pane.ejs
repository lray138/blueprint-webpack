<%
    var tab_pane_id = tab_pane_id;
    var tab_pane_content = tab_pane_content;
    var active_class = typeof is_active !== 'undefined' 
        ? (is_active ? `show active` : `fade`)
        : `fade`;
%>
<div class="tab-pane fade <%= active_class %>" 
    id="<%= id %>" 
    role="tabpanel" 
    aria-labelledby="<%= id %>-tab">
    <%- content %>
</div>