<%
    var escapeHtml = require('/blueprint/utils/escape-html');
    var content = content || '';
    var language = language || 'html';
    var pre_class = pre_class || 'mb-0 bg-light p-3 rounded';
    var code_class = code_class || ('language-' + language);
    var should_escape = typeof escape === 'undefined' ? true : !!escape;

    var body = should_escape ? escapeHtml(content) : String(content);
%>
<pre class="<%= pre_class %>"><code class="<%= code_class %>"><%- body %></code></pre>
