<%
  var text = typeof text !== "undefined" ? text : "";
  var attrs = typeof attrs !== "undefined" ? attrs : {};
  var class_names = typeof class_names !== "undefined" ? class_names : "";
  var style = typeof style !== "undefined" ? style : "";

  // if class_names exists, merge it into attrs.class
  if (class_names) {
    attrs.class = (attrs.class ? attrs.class + " " : "") + class_names;
  }

  if(style) {
    attrs.style = (attrs.style ? attrs.style + " " : "") + style;
  }

  var __attributes__ = Object.entries(attrs)
    .map(([key, value]) => `${key}="${value}"`)
    .join(" ");
%>
<p <%- __attributes__ %>><%- text %></p>