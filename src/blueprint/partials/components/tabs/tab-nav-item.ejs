<%
    var text = text || 'Preview';
    var id = id || 'preview';
    var button_id = id + '-tab';
    var selected = selected || false;
    var button_class_names = button_class_names || '';
    if(selected) {
        button_class_names += ' active';
    }
%>
<li class="nav-item" role="presentation">
    <button class="nav-link <%= button_class_names %>" 
        id="<%= button_id %>" data-bs-toggle="tab" 
        data-bs-target="#<%= id %>" 
        type="button" 
        role="tab" 
        aria-controls="<%= id %>" 
        aria-selected="<%= selected ? 'true' : 'false' %>">
        <%- text %>
    </button>
</li>