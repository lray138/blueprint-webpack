  <style>
    :root{
      --ink:#111;
      --paper:#fff;
      --muted:#666;
      --rule: #111;

      /* sizing */
      --radius: 28px;
      --pad: 18px;
      --gap: 16px;

      /* type */
      --h1: clamp(1.6rem, 2.2vw, 2.2rem);
      --h2: clamp(1.1rem, 1.8vw, 1.6rem);
      --h3: 0.95rem;
      --body: 0.95rem;
      --small: 0.82rem;
    }

    *{ box-sizing:border-box; }
    body{
      margin:0;
      background: #f3f3f3;
      color: var(--ink);
      font-family: system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, sans-serif;
      line-height:1.25;
    }

    .wrap{
      max-width: 1100px;
      margin: 0 auto;
      padding: clamp(14px, 2vw, 28px);
    }

    /* Header */
    header{
      text-align:center;
      padding: 22px 10px 10px;
    }
    .brand{
      display:inline-block;
      border: 3px solid var(--ink);
      padding: 12px 18px 10px;
      line-height:1;
      letter-spacing: 0.05em;
      font-weight: 800;
      text-transform: uppercase;
      background: var(--paper);
    }
    .brand .top{ font-size: clamp(1.5rem, 4vw, 3rem); display:block; }
    .brand .sub{ font-size: clamp(0.9rem, 2.1vw, 1.3rem); display:block; margin-top:6px; font-weight: 700; }

    .subnote{
      margin: 10px auto 0;
      max-width: 60ch;
      color: var(--muted);
      font-size: var(--small);
    }

    /* Layout */
    .page{
      background: var(--paper);
      border-radius: 18px;
      padding: clamp(14px, 2vw, 22px);
      box-shadow: 0 8px 30px rgba(0,0,0,0.08);
      margin: 18px 0;
    }

    .grid{
      display:grid;
      gap: var(--gap);
      grid-template-columns: 1fr;
    }

    @media (min-width: 900px){
      .grid.two{
        grid-template-columns: 1fr 1fr;
        align-items:start;
      }
      .grid.three{
        grid-template-columns: 1fr 1fr 1fr;
      }
    }

    /* Menu Panels */
    .panel{
      border: 3px solid var(--rule);
      border-radius: var(--radius);
      padding: var(--pad);
      background: var(--paper);
    }

    .panel-title{
      display:flex;
      align-items:baseline;
      justify-content:center;
      gap: 10px;
      margin: 0 0 10px;
      text-transform: uppercase;
      letter-spacing: 0.10em;
      font-weight: 900;
      font-size: var(--h2);
      text-align:center;
    }

    .panel-title:before,
    .panel-title:after{
      content:"";
      flex: 1 1 auto;
      height: 3px;
      background: var(--ink);
      border-radius: 99px;
      opacity: 0.95;
    }

    .panel-sub{
      text-align:center;
      margin-top:-6px;
      margin-bottom: 12px;
      color: var(--muted);
      font-size: var(--small);
    }

    /* Items */
    .items{
      display:flex;
      flex-direction:column;
      gap: 10px;
    }

    .item{
      display:grid;
      grid-template-columns: 1fr auto;
      gap: 10px;
      align-items:start;
    }

    .item .name{
      font-weight: 800;
      text-transform: uppercase;
      letter-spacing: 0.03em;
      font-size: var(--h3);
    }

    .item .price{
      font-weight: 800;
      white-space:nowrap;
    }

    .item .desc{
      grid-column: 1 / -1;
      margin-top: 2px;
      color: var(--muted);
      font-size: var(--small);
      line-height:1.25;
    }

    .meta{
      color: var(--muted);
      font-size: var(--small);
      margin-top: 10px;
      text-align:center;
    }

    /* two-column list inside a panel */
    .cols{
      display:grid;
      grid-template-columns: 1fr;
      gap: 18px;
    }
    @media (min-width: 700px){
      .cols{ grid-template-columns: 1fr 1fr; }
    }

    .divider{
      margin: 10px 0 2px;
      height: 2px;
      background: #ddd;
      border-radius: 99px;
    }

    /* Pills / icons (simple) */
    .badges{
      display:flex;
      justify-content:center;
      gap: 10px;
      flex-wrap:wrap;
      margin-top: 10px;
    }
    .badge{
      border: 2px solid var(--ink);
      border-radius: 999px;
      padding: 6px 10px;
      font-size: var(--small);
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0.06em;
    }

    /* Footer note */
    .footer-note{
      text-align:center;
      margin-top: 12px;
      font-size: var(--small);
      color: var(--muted);
      letter-spacing: 0.02em;
    }

    /* Print */
    @media print{
      body{ background:#fff; }
      .wrap{ max-width:none; padding:0; }
      .page{ box-shadow:none; margin:0; border-radius:0; padding: 0.25in; }
      header{ padding:0.25in 0 0.1in; }
      .footer-note{ color:#000; }
    }
  </style>
</head>

